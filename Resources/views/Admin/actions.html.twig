{% spaceless %}

{% trans_default_domain "CPTermsBundle" %}

<div class='btn-group'>
	<button type='button' class='dropdown-toggle' data-toggle='dropdown'>
		<i class='fa fa-cog'></i>
	</button>
	<ul class='dropdown-menu dropdown-menu-right navbar-right' role='menu'>
		<li>
			<a href="{{ path('cp_terms_admin_show', { id: tos.id }) }}">{% trans %}terms.actions.show{% endtrans %}</a>
			{% if tos.defaultDiffTarget is not null %}
				<a href="{{ path('cp_terms_admin_diff', { id: tos.id }) }}">{% trans %}terms.actions.diff{% endtrans %}</a>
			{% endif %}
			<a href="{{ path('cp_terms_admin_clone', { id: tos.id }) }}">{% trans %}terms.actions.clone{% endtrans %}</a>
			{% if not tos.isFinal %}
				<a href="{{ path('cp_terms_admin_finalize', { id: tos.id }) }}" class="confirm"
					data-confirm="{% trans %}terms.finalize.confirm{% endtrans %}">{% trans %}terms.actions.finalize{% endtrans %}</a>
				<a href="{{ path('cp_terms_admin_delete', { id: tos.id }) }}" class="confirm"
					data-confirm="{% trans %}terms.delete.confirm{% endtrans %}">{% trans %}terms.actions.delete{% endtrans %}</a>
			{% endif %}
		</li>
	</ul>
</div>
{% endspaceless %}
