{% extends "CPTermsBundle::frontend.html.twig" %}

{% trans_default_domain "CPTermsBundle" %}

{% block cp_terms_page_class %}diff{% endblock %}

{% block cp_terms_page_title %}
	{% trans %}diff.page_title{% endtrans %}
{% endblock %}

{% block cp_terms_head_style %}
	{{ parent() }}
	<link href="{{ asset(theme) }}" type="text/css" rel="stylesheet" media="screen" />
{% endblock %}

{% block cp_terms_content %}
	<div class="panel panel-default">
		<div class="panel-body">
			{{ terms|diff(terms_latest) }}
		</div>
		<div class="panel-footer">
			<a class="btn btn-primary" href="{{ path('cp_terms_agree') }}">
				<i class="fa fa-long-arrow-left"></i> {% trans %}diff.go_back{% endtrans %}
			</a>
		</div>
	</div>
{% endblock %}
